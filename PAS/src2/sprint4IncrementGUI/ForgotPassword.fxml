				<Insets bottom="10.0" />
			</StackPane.margin>
			<font>
				<Font size="16.0" />
			</font>
		</Button>
		<Button fx:id="buttonCancel" maxHeight="35.0" maxWidth="80.0" minHeight="35.0" minWidth="80.0" mnemonicParsing="false" text="Cancel" StackPane.alignment="BOTTOM_CENTER">
			<StackPane.margin>
				<Insets bottom="10.0" />
			</StackPane.margin>
			<font>
				<Font size="16.0" />
			</font>
		</Button>
      <ImageView fitHeight="100.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" scaleX="0.5" scaleY="0.55" StackPane.alignment="TOP_CENTER">
         <image>
            <Image url="@PAS_logo.gif" />
         </image>
         <StackPane.margin>
            <Insets left="10.0" right="110.0" top="-14.0" />
         </StackPane.margin>
      </ImageView>
      <ImageView fitHeight="100.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" scaleX="0.75" scaleY="0.9" StackPane.alignment="TOP_LEFT">
         <image>
            <Image url="@NHS-RGB.jpg" />
         </image>
         <StackPane.margin>
            <Insets left="-10.0" top="5.0" />
         </StackPane.margin>
      </ImageView>
      <Label text="and a new password will be sent">
         <font>
            <Font size="20.0" />
         </font>
         <StackPane.margin>
            <Insets bottom="100.0" top="100.0" />
         </StackPane.margin>
      </Label>
     
      <Button fx:id="buttonSecurity" maxHeight="35.0" maxWidth="155.0" minHeight="35.0" minWidth="155.0" mnemonicParsing="false" text="Security Question" StackPane.alignment="BOTTOM_LEFT">
         <font>
            <Font size="16.0" />
         </font>
         <StackPane.margin>
            <Insets bottom="10.0" />
         </StackPane.margin>
      </Button>
      <Label text="to your email address">
         <font>
            <Font size="20.0" />
         </font>
         <StackPane.margin>
            <Insets top="50.0" />
         </StackPane.margin>
      </Label>
