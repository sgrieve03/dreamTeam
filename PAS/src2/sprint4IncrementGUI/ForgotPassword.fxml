         <StackPane.margin>
            <Insets bottom="130.0" left="-290.0" />
         </StackPane.margin>
      </Label>
      <TextField fx:id="textUserName" maxHeight="25.0" maxWidth="246.0" minHeight="25.0" minWidth="150.0">
