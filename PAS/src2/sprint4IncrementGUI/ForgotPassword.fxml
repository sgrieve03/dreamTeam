            <Insets bottom="130.0" right="-70.0" />
         </StackPane.margin>
      </TextField>
      <Label text="Please enter your user name">
         <font>
            <Font size="20.0" />
         </font>
         <StackPane.margin>
            <Insets bottom="190.0" />
         </StackPane.margin>
      </Label>
	
	<TextField fx:id="textSecurityQ" maxHeight="25.0" maxWidth="246.0" minHeight="25.0" minWidth="150.0" prefHeight="25.0" prefWidth="246.0">
         <StackPane.margin>
            <Insets right="-70.0" top="140.0" />
         </StackPane.margin></TextField>
		<PasswordField fx:id="textSecurityA" maxHeight="25.0" maxWidth="246.0" minHeight="25.0" minWidth="150.0" prefHeight="25.0" prefWidth="246.0">
			<StackPane.margin>
				<Insets right="-70.0" top="220.0" />
			</StackPane.margin>
		</PasswordField>
		<Label text="Question">
			<StackPane.margin>
				<Insets left="-290.0" top="140.0" />
			</StackPane.margin>
			<font>
				<Font size="20.0" />
			</font>
		</Label>
		<Label text="Answer">
			<StackPane.margin>
				<Insets left="-290.0" top="220.0" />
			</StackPane.margin>
			<font>
				<Font size="20.0" />
			</font>
		</Label>
		<Label text="Answer your security question">
			<StackPane.margin>
				<Insets bottom="150.0" top="100.0" />
			</StackPane.margin>
			<font>
				<Font size="20.0" />
			</font>
		</Label>
		<Button fx:id="buttonResetPassword" maxHeight="35.0" maxWidth="155.0" minHeight="35.0" minWidth="155.0" mnemonicParsing="false" text="Reset Password" StackPane.alignment="BOTTOM_RIGHT">
