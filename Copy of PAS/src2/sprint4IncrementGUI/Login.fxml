<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>

<StackPane maxHeight="400.0" maxWidth="400.0" minHeight="400.0" minWidth="400.0" prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sprint4IncrementGUI.LoginController">
	<children>
	<TextField fx:id="textUserName" maxHeight="25.0" maxWidth="150.0" minHeight="25.0" minWidth="150.0" />
		<PasswordField fx:id="pwPassWord" maxHeight="25.0" maxWidth="150.0" minHeight="25.0" minWidth="150.0" onAction="#onEnter">
			<StackPane.margin>
				<Insets top="80.0" />
			</StackPane.margin>
		</PasswordField>
		<Label text="User Name">
			<StackPane.margin>
				<Insets right="270.0" />
			</StackPane.margin>
			<font>
				<Font size="20.0" />
			</font>
		</Label>
		<Label text="Password">
			<StackPane.margin>
				<Insets right="270.0" top="80.0" />
			</StackPane.margin>
			<font>
				<Font size="20.0" />
			</font>
		</Label>
		<Label text="Please login to access PAS System">
			<StackPane.margin>
				<Insets bottom="150.0" />
			</StackPane.margin>
			<font>
				<Font size="20.0" />
			</font>
		</Label>
		<Button fx:id="buttonLogin" onAction="#nextPane" maxHeight="35.0" maxWidth="140.0" minHeight="35.0" minWidth="140.0" mnemonicParsing="false" text="Login">
			<StackPane.margin>
				<Insets top="160.0" />
			</StackPane.margin>
			<font>
				<Font size="16.0" />
			</font>
		</Button>
		<Button fx:id="buttonForgotPassword" maxHeight="35.0" minHeight="35.0" mnemonicParsing="false" text="Forgot Password">
			<StackPane.margin>
				<Insets top="250.0" />
			</StackPane.margin>
			<font>
				<Font size="16.0" />
			</font>
		</Button>
		<Button fx:id="buttonHelp" maxHeight="35.0" maxWidth="140.0" minHeight="35.0" minWidth="140.0" mnemonicParsing="false" text="Help" StackPane.alignment="BOTTOM_CENTER">
			<StackPane.margin>
				<Insets bottom="10.0" />
			</StackPane.margin>
			<font>
				<Font size="16.0" />
			</font>
		</Button>
      <ImageView fitHeight="100.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" scaleX="0.5" scaleY="0.55" StackPane.alignment="TOP_CENTER">
         <image>
            <Image url="@PAS_logo.gif" />
         </image>
         <StackPane.margin>
            <Insets left="10.0" right="110.0" top="-14.0" />
         </StackPane.margin>
      </ImageView>
      <ImageView fitHeight="100.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" scaleX="0.75" scaleY="0.9" StackPane.alignment="TOP_LEFT">
         <image>
            <Image url="@NHS-RGB.jpg" />
         </image>
         <StackPane.margin>
            <Insets left="-10.0" top="5.0" />
         </StackPane.margin>
      </ImageView>
	</children>
</StackPane>
